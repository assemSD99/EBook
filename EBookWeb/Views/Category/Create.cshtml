@model Category

<form method="post">
    <div class="border mt-4 p-3">
        <div class="row pb-3">
           <h2 class="text-primary">Create Category</h2> 
           <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index" style="width:150px">
            Back To List
        </a>

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
    
